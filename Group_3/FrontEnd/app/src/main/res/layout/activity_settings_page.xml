<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Settings">


    <!-- Including the header layout -->
    <include
        android:id="@+id/include2"
        layout="@layout/header" />

    <TextView
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Settings"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include2" />

    <LinearLayout
        android:id="@+id/settings_choice"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#F8F8F8"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_title">


        <Button
            android:id="@+id/notification_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FABABA"
            android:drawableEnd="@drawable/next"
            android:drawablePadding="8dp"
            android:gravity="start|center_vertical"
            android:padding="12dp"
            android:text="Notification On"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/flashing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FABABA"
            android:drawableEnd="@drawable/next"
            android:drawablePadding="8dp"
            android:gravity="start|center_vertical"
            android:padding="12dp"
            android:text="Flashing"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/noise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FABABA"
            android:drawableEnd="@drawable/next"
            android:drawablePadding="8dp"
            android:gravity="start|center_vertical"
            android:padding="12dp"
            android:text="Noise"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/notification_alert_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FABABA"
            android:drawableEnd="@drawable/next"
            android:drawablePadding="8dp"
            android:gravity="start|center_vertical"
            android:padding="12dp"
            android:text="Notification Alert Type"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/text_to_speech"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FABABA"
            android:drawableEnd="@drawable/next"
            android:drawablePadding="8dp"
            android:gravity="start|center_vertical"
            android:padding="12dp"
            android:text="Text-To-Speech"
            android:textColor="@color/black" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>